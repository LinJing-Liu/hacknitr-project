{
    "manifest_version": 3,
    "name": "Motivation Game",
    "version": "1.0",
    "description": "TODO",
    "icons": {},
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "matches": [
                "http://www.google.com/*",
                "https://*/*"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_icon": {},
        "default_popup": "type_popup.html"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "storage"
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+U",
                "mac": "Command+U"
            }
        }
    }
}